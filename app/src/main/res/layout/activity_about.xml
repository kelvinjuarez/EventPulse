<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        <!-- Icono de la aplicación -->
        <ImageView
                android:id="@+id/imageViewAppIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/eventpulse"
                android:contentDescription="Icono de la aplicación"
                android:layout_marginBottom="16dp" />

        <!-- Título de la aplicación -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="8dp" />

        <!-- Versión de la aplicación -->
        <TextView
                android:id="@+id/textViewAppVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versión 1.0.0"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="16dp" />

        <!-- Línea divisoria -->
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="16dp" />

        <!-- Información del desarrollador -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desarrollador"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="8dp" />

        <ImageView
                android:id="@+id/imageViewDeveloperPhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/kelvin"
                android:contentDescription="Foto del desarrollador"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circle"
                android:scaleType="centerCrop" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelvin Juarez"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estudiante y Desarrollador de Software"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="16dp" />

        <!-- Línea divisoria -->
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="16dp" />

        <!-- Información adicional -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información adicional"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="8dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esta aplicación fue desarrollada para gestionar eventos y actividades comunitarias. Ofrece autenticación segura, RSVP y una experiencia social interactiva."
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
