<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:label="@string/app_name"
            android:icon="@drawable/eventpulse"
            android:supportsRtl="true"
            android:theme="@style/Theme.EventPulse"
            tools:targetApi="31">

        <activity
                android:name=".auth.LoginActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".auth.SignUpActivity"
                android:exported="false"/>
        <activity
                android:name=".social.ShareActivity"
                android:exported="false"/>
        <activity
                android:name=".management.MyEventsActivity"
                android:exported="false"/>
        <activity
                android:name=".management.ViewEventActivity"
                android:exported="false"/>
        <activity
                android:name=".management.NewEventActivity"
                android:exported="false"/>
        <activity
                android:name=".management.AboutActivity"
                android:exported="false"/>
        <activity
                android:name=".management.MyAccountActivity"
                android:exported="false"/>
        <activity
                android:name=".management.UpcomingEventsActivity"
                android:exported="false"/>
        <activity
                android:name=".management.HistoryActivity"
                android:exported="false"/>
    </application>


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" android:required="false" />



</manifest>